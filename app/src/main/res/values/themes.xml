<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
		<!-- Customize your theme here. -->
		<item name="android:windowContentOverlay">@null</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="android:textColorPrimary">@color/titleTextColor</item>
		<item name="android:textColorPrimaryDisableOnly">@color/disableTextColor</item>
		<item name="android:textColorPrimaryNoDisable">@color/titleTextColor</item>
		<item name="android:textColor">@color/subTitleTextColor</item>
		<item name="android:subtitleTextColor">@color/mid_gray</item>
		<item name="android:titleTextColor">@color/titleTextColor</item>
		<item name="android:textColorHint">@color/disableTextColor</item>
		<item name="titleCentered">true</item>
		<item name="android:windowBackground">@color/windowBackground</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layoutDirection">ltr</item>
		<item name="android:textDirection">ltr</item>
		<item name="android:typeface">sans</item>
	</style>

	<style name="BasicButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="android:drawablePadding">@dimen/_8sdp</item>
		<item name="android:foreground">?selectableItemBackgroundBorderless</item>
		<item name="android:textColor">@color/titleTextColor</item>
		<item name="android:textSize">@dimen/_10sdp</item>
		<item name="autoColorSet">false</item>
		<item name="bbFontStyle">bb_NORMAL</item>
		<item name="android:gravity">start|center</item>
		<item name="android:paddingEnd">@dimen/_12sdp</item>
		<item name="android:paddingStart">@dimen/_12sdp</item>
		<item name="android:paddingTop">@dimen/_4sdp</item>
		<item name="android:paddingBottom">@dimen/_4sdp</item>
	</style>

	<style name="buyHintTextAppereance">
		<item name="android:textSize">@dimen/_8sdp</item>
		<item name="android:textColor">@color/green</item>
		<item name="font">@font/comfortaa_regular</item>
		<item name="fontFamily">@font/comfortaa_regular</item>
	</style>

	<style name="sellHintTextAppereance">
		<item name="android:textSize">@dimen/_8sdp</item>
		<item name="android:textColor">@color/red</item>
		<item name="font">@font/comfortaa_regular</item>
		<item name="fontFamily">@font/comfortaa_regular</item>
	</style>

	<style name="ChipTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme -->
	</style>

	<style name="BottomNavigationView" parent="@style/TextAppearance.MaterialComponents.Headline6">
		<item name="android:textSize">@dimen/_12sdp</item>
	</style>

	<style name="BottomNavigationView.Active" parent="@style/TextAppearance.MaterialComponents.Headline4">
		<item name="android:textSize">@dimen/_8sdp</item>
		<item name="android:textColor">@color/colorPrimary</item>
	</style>

	<style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="android:windowIsFloating">false</item>
		<item name="android:statusBarColor">@color/transparent</item>
		<item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
		<item name="android:background">@color/transparent</item>
		<item name="colorBackgroundFloating">@color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/titleTextColor</item>
		<item name="android:textColor">@color/subTitleTextColor</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layoutDirection">ltr</item>
		<item name="android:textDirection">ltr</item>
		<item name="android:typeface">sans</item>
	</style>

	<style name="tabFont" parent="TextAppearance.Design.Tab">
		<item name="textAllCaps">false</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textSize">@dimen/_12sdp</item>
		<item name="android:typeface">sans</item>
		<item name="fontFamily">@font/comfortaa_regular</item>
		<item name="font">@font/comfortaa_regular</item>
	</style>

	<style name="toolbarFont" parent="TextAppearance.MaterialComponents.Headline6">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textSize">@dimen/_14sdp</item>
		<item name="android:typeface">sans</item>
		<item name="android:gravity">end|center</item>
		<item name="fontFamily">@font/comfortaa_bold</item>
		<item name="font">@font/comfortaa_bold</item>
	</style>

	<style name="fabFont" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textSize">@dimen/_14sdp</item>
		<item name="android:typeface">sans</item>
		<item name="android:gravity">center|start</item>
		<item name="fontFamily">@font/comfortaa_bold</item>
		<item name="font">@font/comfortaa_bold</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="color">@color/colorPrimary</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="prefixFont" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textSize">@dimen/_10sdp</item>
		<item name="android:typeface">sans</item>
		<item name="android:gravity">center|start</item>
		<item name="fontFamily">@font/comfortaa_regular</item>
		<item name="font">@font/comfortaa_regular</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="color">@color/colorPrimary</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="editTextFont" parent="TextAppearance.MaterialComponents.Headline6">
		<item name="android:layout_marginEnd">@dimen/_18sdp</item>
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textSize">@dimen/_8sdp</item>
		<item name="android:typeface">sans</item>
		<item name="android:gravity">center|start</item>
		<item name="fontFamily">@font/comfortaa_regular</item>
		<item name="font">@font/comfortaa_regular</item>
	</style>

	<style name="OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="boxBackgroundMode">outline</item>
		<item name="boxStrokeErrorColor">@color/red</item>
		<item name="errorTextAppearance">@style/editTextFont</item>
		<item name="android:textColorHint">@color/textInputStrokeColor</item>
		<item name="backgroundColor">@color/colorPrimary</item>
		<item name="prefixTextAppearance">@style/prefixFont</item>
		<item name="prefixTextColor">@color/mid_gray</item>
		<item name="hintAnimationEnabled">true</item>
		<item name="shapeAppearanceOverlay">
			@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
		</item>
	</style>

	<style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">@dimen/card_radius</item>
	</style>

	<style name="toolbar" parent="Widget.MaterialComponents.Toolbar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?actionBarSize</item>
		<item name="android:background">@color/itemBackground</item>
		<item name="android:elevation">0dp</item>
		<item name="android:gravity">center</item>
		<item name="android:outlineProvider">none</item>
		<item name="layout_collapseMode">pin</item>
		<item name="titleCentered">true</item>
		<item name="titleTextAppearance">@style/toolbarFont</item>
		<item name="titleTextColor">@color/colorPrimary</item>
		<item name="layout_constraintEnd_toEndOf">parent</item>
		<item name="layout_constraintStart_toStartOf">parent</item>
		<item name="layout_constraintTop_toTopOf">parent</item>
	</style>

	<style name="DialogTheme" parent="Widget.MaterialComponents.CardView">
		<item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_4sdp</item>
		<item name="android:layout_marginVertical" tools:targetApi="o">@dimen/_2sdp</item>
		<item name="cardPreventCornerOverlap">true</item>
		<item name="cardUseCompatPadding">true</item>
		<item name="cardBackgroundColor">@color/itemBackground</item>
		<item name="cardCornerRadius">@dimen/card_radius</item>
		<item name="cardElevation">0dp</item>
		<item name="cardMaxElevation">0dp</item>
		<item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<declare-styleable name="BasicButton">
		<attr name="bbFontStyle" format="enum">
			<enum name="bb_NORMAL" value="0" />
