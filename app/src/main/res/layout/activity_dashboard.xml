<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.dashboard.DashboardActivity">

	<View
		android:id="@+id/v_top"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_150sdp"
		android:background="#3B867E"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/_40sdp"
		android:background="#F49B7F"
		android:elevation="@dimen/_24sdp"
		app:layout_constraintBottom_toBottomOf="@id/v_top"
		app:layout_constraintEnd_toEndOf="@id/v_top"
		app:layout_constraintStart_toStartOf="@id/v_top"
		app:layout_constraintTop_toTopOf="@id/v_top" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/img_avatar"
		android:layout_width="@dimen/_125sdp"
		android:layout_height="@dimen/_125sdp"
		android:elevation="@dimen/_24sdp"
		android:src="@drawable/shape_circle"
		app:layout_constraintBottom_toBottomOf="@id/v_top"
		app:layout_constraintEnd_toEndOf="@id/v_top"
		app:layout_constraintStart_toStartOf="@id/v_top"
		app:layout_constraintTop_toTopOf="@id/v_top" />

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/txt_username"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/v_top" />

	<androidx.appcompat.widget.LinearLayoutCompat
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="@dimen/_24sdp"
		android:orientation="vertical"
		android:weightSum="2"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/txt_username">

		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:weightSum="2">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/img_chart"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="@dimen/_24sdp"
				android:layout_weight="1"
				app:srcCompat="@drawable/vtr_chart" />

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/img_vibrate"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="@dimen/_24sdp"
				android:layout_weight="1"
				app:srcCompat="@drawable/vtr_vibrate" />

		</androidx.appcompat.widget.LinearLayoutCompat>

		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:weightSum="2">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/img_gym"
				android:layout_width="match_parent"
				android:rotation="-45"
				android:layout_height="match_parent"
				android:layout_margin="@dimen/_24sdp"
				android:layout_weight="1"
				app:srcCompat="@drawable/vtr_gym" />

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/img_gifts"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="@dimen/_24sdp"
				android:layout_weight="1"
				app:srcCompat="@drawable/vtr_gift" />
		</androidx.appcompat.widget.LinearLayoutCompat>
	</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>